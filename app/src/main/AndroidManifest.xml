        android:roundIcon="@drawable/icon_4"
        android:supportsRtl="true"
        android:theme="@style/Theme.Digilearn"
        tools:targetApi="31">
        <activity
            android:name=".StartChallenge"
            android:exported="false" />
        <activity
            android:name=".Results"
            android:exported="false" />
        <activity
            android:name=".EditProfile"
            android:exported="false" />
        <activity
            android:name=".Quiz"
            android:exported="false" />
        <activity
            android:name=".SelectOpponent"
            android:exported="false" />
        <activity
            android:name=".Achievements"
            android:exported="false" />
        <activity
            android:name=".Privacy"
            android:exported="false" />
        <activity
            android:name=".Credits"
            android:exported="false" />
        <activity
            android:name=".ImagePost"
            android:exported="false" />
        <activity
            android:name=".CreateTextPost"
