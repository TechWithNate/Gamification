<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_dark"
    android:layout_height="match_parent">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/grey_dark"
        android:id="@+id/user_profile">

<!--        Player  -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:id="@+id/player">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardCornerRadius="40dp"
                android:id="@+id/img_card"
                android:layout_centerVertical="true">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_launcher_background"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/profile_image"
                    android:id="@+id/user_img"/>

            </com.google.android.material.card.MaterialCardView>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/img_card"
                android:layout_marginStart="10dp"
                android:id="@+id/name">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John Smith"
                    android:textColor="@color/white"
                    android:id="@+id/username"
                    android:layout_marginStart="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Level 1"
                    android:textColor="@color/white"
                    android:id="@+id/user_level"
                    android:layout_below="@+id/username"
                    android:layout_marginStart="10dp"/>

            </RelativeLayout>

        </RelativeLayout>
<!--        End of Player   -->
<!--        Opponent -->

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:id="@+id/opponent">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardCornerRadius="40dp"
                android:layout_toEndOf="@+id/opponent_name"
                android:id="@+id/opponent_img_card"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_launcher_background"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/profile_image"
                    android:id="@+id/opponent_img"/>

            </com.google.android.material.card.MaterialCardView>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:id="@+id/opponent_name">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John Smith"
                    android:textColor="@color/white"
                    android:id="@+id/opponent_username"
                    android:layout_marginEnd="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Level 1"
                    android:textColor="@color/white"
                    android:id="@+id/opponent_level"
                    android:layout_below="@+id/opponent_username"
                    android:layout_marginEnd="10dp"/>

            </RelativeLayout>


        </RelativeLayout>
<!--        End of Opponent     -->



    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/question"
        android:text="This is a sample test question and you should select the right option"
        android:textColor="@color/white"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@+id/user_profile"
        android:layout_marginTop="20dp"
        android:textSize="18sp"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question"
        android:layout_marginTop="50dp"
        app:cardCornerRadius="10dp"
        app:strokeWidth="0dp"
        android:backgroundTint="@color/grey_dark"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">


            <RadioButton
                android:id="@+id/answer1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="@color/grey_dark"
                android:text="First Possible Answer" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="@color/divider_color"/>

            <RadioButton
                android:id="@+id/answer2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="@color/grey_dark"
                android:text="First Possible Answer" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="@color/divider_color"/>

            <RadioButton
                android:id="@+id/answer3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="@color/grey_dark"
                android:text="First Possible Answer" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="@color/divider_color"/>


            <RadioButton
                android:id="@+id/answer4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="@color/grey_dark"
                android:text="First Possible Answer" />


        </LinearLayout>



    </com.google.android.material.card.MaterialCardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_above="@+id/submit_btn"
        android:background="@color/divider_color"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit Answer"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/light_blue"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:cornerRadius="5dp"
        android:id="@+id/submit_btn"/>

</RelativeLayout>