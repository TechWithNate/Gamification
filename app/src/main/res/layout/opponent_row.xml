<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_dark"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:paddingStart="5dp"
    android:paddingEnd="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/opponent_card"
            app:cardCornerRadius="25dp"
            app:cardElevation="5dp"
            app:strokeWidth="0dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/game_icon"
                android:scaleType="centerCrop"
                android:id="@+id/opponent_image"/>

        </com.google.android.material.card.MaterialCardView>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="John Doe"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_slab_bold"
            android:layout_toEndOf="@+id/opponent_card"
            android:layout_marginStart="20dp"
            android:id="@+id/opponent_name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level 20"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="1dp"
            android:textColor="@color/white_grey"
            android:fontFamily="@font/roboto_slab_light"
            android:layout_toEndOf="@+id/opponent_card"
            android:layout_marginStart="20dp"
            android:layout_below="@id/opponent_name"
            android:id="@+id/opponent_level"/>

    </RelativeLayout>


</RelativeLayout>